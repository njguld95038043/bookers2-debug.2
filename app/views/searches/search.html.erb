<h1>Results index</h1>

<table>
  <% if @range == "User" %>
   <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
     <% end %>
   </tbody>
   <% else %>
   <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
   </tbody>
   <% end %>
</table>
